<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.qlcd.loggertools.ui.log_list.LogListViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--                直接展示的布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.qlcd.loggertools.widget.BarView
                    android:id="@+id/statusBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/tb_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/app_color_white">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="14dp"
                        android:src="@mipmap/app_ic_close" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Logger"
                        android:textColor="@color/app_color_black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="14dp"
                        android:src="@mipmap/app_ic_filter" />
                </RelativeLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.appbar.AppBarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/app_color_white"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/block_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0.5dp"
                            android:background="@color/app_color_white"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            app:layout_scrollFlags="scroll|enterAlways|snap">

                            <EditText
                                android:id="@+id/et_search"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/app_bg_r5"
                                android:backgroundTint="@color/app_color_gray"
                                android:drawableStart="@mipmap/app_ic_search"
                                android:drawablePadding="8dp"
                                android:hint="仅支持搜索日志内容"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:paddingStart="16dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="5dp"
                                android:singleLine="true"
                                android:text="@={viewModel.keywords}"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toStartOf="@id/tv_cancel"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_goneMarginEnd="16dp" />

                            <ImageView
                                android:id="@+id/iv_clear_search_box"
                                isInVisible="@{viewModel.keywords.empty}"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:onClick="@{() -> viewModel.cleanSearchContent()}"
                                android:padding="10dp"
                                android:src="@mipmap/app_ic_clear"
                                app:layout_constraintBottom_toBottomOf="@id/et_search"
                                app:layout_constraintEnd_toEndOf="@id/et_search"
                                app:layout_constraintTop_toTopOf="@id/et_search" />

                            <TextView
                                android:id="@+id/tv_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="1dp"
                                android:onClick="@{() -> viewModel.cleanSearchContent()}"
                                android:padding="15dp"
                                android:text="Cancel"
                                android:textColor="@color/app_color_blue"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="@id/et_search"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/et_search" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </com.google.android.material.appbar.AppBarLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_anchor="@id/rv_list"
                        app:layout_anchorGravity="bottom"
                        app:layout_behavior="@string/bottom_behavior">

                        <TextView
                            android:id="@+id/tv_clean"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/app_bg_r5"
                            android:backgroundTint="@color/app_color_gray"
                            android:gravity="center"
                            android:text="清空"
                            android:textColor="@color/app_color_black"
                            android:textSize="14sp" />

                    </FrameLayout>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </LinearLayout>

            <!--                侧滑菜单布局-->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/app_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.qlcd.loggertools.widget.BarView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="30dp"
                        android:text="排序"
                        android:textColor="@color/c_333333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rg_sort"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <RadioButton
                            android:id="@+id/rb_asc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_sort"
                            android:button="@null"
                            android:gravity="center"
                            android:text="正序"
                            android:textColor="@color/select_sort_text"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rb_desc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_sort"
                            android:button="@null"
                            android:gravity="center"
                            android:text="倒序"
                            android:textColor="@color/select_sort_text"
                            android:textSize="12sp" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="40dp"
                        android:text="时间"
                        android:textColor="@color/c_333333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <TextView
                            android:id="@+id/tv_starting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_sort"
                            android:gravity="center"
                            android:text="自启动后"
                            android:textColor="@color/c_333333"
                            android:textColorHint="@color/c_333333"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_dateFilter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_sort"
                            android:gravity="center"
                            android:hint="时间筛选"
                            android:text="@{viewModel.dateTextFilter}"
                            android:textColor="@color/c_333333"
                            android:textColorHint="@color/c_333333"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginBottom="70dp"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:id="@+id/btn_reset"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_sort_true"
                        android:gravity="center"
                        android:text="重置"
                        android:textColor="@color/app_color_white" />

                    <TextView
                        android:id="@+id/btn_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_sort_true"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="@color/app_color_white" />

                </LinearLayout>


            </LinearLayout>
        </androidx.drawerlayout.widget.DrawerLayout>


    </FrameLayout>


</layout>