<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="vm"
            type="com.qlcd.loggertools.ui.home.LogHomeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color_white"
        android:orientation="vertical">

        <com.qlcd.loggertools.widget.BarView
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/tb_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/statusBar"
            android:background="@color/app_color_white">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="14dp"
                android:src="@mipmap/app_ic_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Logger"
                android:textColor="@color/app_color_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="14dp"
                android:src="@mipmap/app_ic_filter" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/block_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tb_title"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/block_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/app_bg_r5"
                    android:backgroundTint="@color/app_color_gray"
                    android:drawableStart="@mipmap/app_ic_search"
                    android:drawablePadding="8dp"
                    android:hint="仅支持搜索日志内容"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:text="@={vm.keywords}"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/tv_cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="16dp" />

                <ImageView
                    android:id="@+id/iv_clear_search_box"
                    isInVisible="@{vm.keywords.empty}"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:onClick="@{() -> vm.cleanSearchContent()}"
                    android:padding="10dp"
                    android:src="@mipmap/app_ic_clear"
                    app:layout_constraintBottom_toBottomOf="@id/et_search"
                    app:layout_constraintEnd_toEndOf="@id/et_search"
                    app:layout_constraintTop_toTopOf="@id/et_search" />

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:onClick="@{() -> vm.cleanSearchContent()}"
                    android:padding="15dp"
                    android:text="Cancel"
                    android:textColor="@color/app_color_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/et_search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/et_search" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_clean"
            android:layout_below="@id/block_top"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/tv_clean"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:background="@drawable/app_bg_r5"
            android:backgroundTint="@color/app_color_gray"
            android:gravity="center"
            android:text="清空"
            android:textColor="@color/app_color_black"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/fl_filter_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="8dp"
            android:visibility="gone">

            <View
                android:id="@+id/bg_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="#7F000000"
                tools:alpha="1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_filter"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/app_bg_left_r5"
                android:clickable="true"
                android:focusable="true"
                android:translationX="300dp"
                tools:translationX="0dp">

                <ScrollView
                    android:id="@+id/scroll_view_filter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:fillViewport="true"
                    android:overScrollMode="ifContentScrolls"
                    app:layout_constraintBottom_toTopOf="@id/tv_reset"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.qlcd.loggertools.widget.BarView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:text="排序"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_sort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="38dp"
                            android:text="时间"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </ScrollView>

                <TextView
                    android:id="@+id/tv_reset"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/app_color_gray"
                    android:gravity="center"
                    android:text="重置"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_do_filter"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/app_color_gray"
                    android:gravity="center"
                    android:text="确定"
                    app:layout_constraintBottom_toBottomOf="@id/tv_reset"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>