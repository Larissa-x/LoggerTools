<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="vm"
            type="com.qlcd.loggertools.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color_white">

        <com.hjq.bar.TitleBar
            android:id="@+id/tb_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@mipmap/app_ic_close"
            app:lineVisible="false"
            app:rightIcon="@mipmap/app_ic_filter"
            app:title="Logger" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tb_title">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/app_bg_r5"
                android:backgroundTint="@color/app_color_gray"
                android:drawableStart="@mipmap/app_ic_search"
                android:drawablePadding="8dp"
                android:hint="仅支持搜索日志内容"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="@={vm.keywords}"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/tv_cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="16dp" />

            <ImageView
                android:id="@+id/iv_clear_search_box"
                isInVisible="@{vm.keywords.empty}"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:onClick="@{() -> vm.cleanSearchContent()}"
                android:padding="10dp"
                android:src="@mipmap/app_ic_clear"
                app:layout_constraintBottom_toBottomOf="@id/et_search"
                app:layout_constraintEnd_toEndOf="@id/et_search"
                app:layout_constraintTop_toTopOf="@id/et_search" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:onClick="@{() -> vm.cleanSearchContent()}"
                android:padding="15dp"
                android:text="Cancel"
                android:textColor="@color/app_color_blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/et_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_search" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/block_filter_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/block_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/tv_clean"
            app:layout_constraintTop_toBottomOf="@id/block_filter_label" />

        <TextView
            android:id="@+id/tv_clean"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/app_bg_r5"
            android:backgroundTint="@color/app_color_gray"
            android:gravity="center"
            android:text="清空"
            android:textColor="@color/app_color_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>